{% extends 'admin.html.twig' %}

{% block js %}
    <script src="/js/jquery.datetimepicker.full.min.js"></script>
    <script>
        $('.datetimepicker').datetimepicker({
           lang:'ru',
           dayOfWeekStart:1   
       });
    </script>
{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="/css/jquery.datetimepicker.css"/>
{% endblock %}
    
{% block body %}
    <div class="bs-callout bs-callout-info">
        <h1 class="page-header">
            {% block body_title %}Подарки{% endblock %}
        </h1> 
    </div>

    <div class="row">
        <div class="text-right col-xs-12" id="filter-block">
            <a class='btn btn-default'>Добавать</a>    
        </div>    
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped table-condensed" id="base-order-table">
                <thead>
                    <th width="3%"><input type="checkbox" id="all-checked"></th>
                    <th width="5%">#</th>
                    <th width="30%">Название</th>
                    <th width="15%">Цена</th>
                    <th width="16%">Товар</th>
                    <th width="5%">Подарено, шт</th>
                    <th width="10" class="text-center">
                        /
                    </th>
                </thead>
                <tbody>
                    {% for item in gift %}
                        <tr>
                            <td class="ch"><input type="checkbox"></td>
                            <td>{{item.id}}</td>
                            <td>{{item.title}}</td>
                            <td>{{item.price}}</td>
                            <td>{{item.product.name}}</td>
                            <td>{{item.quantity}}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}