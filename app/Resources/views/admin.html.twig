<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    
    <link rel="stylesheet" type="text/css" href="/css/menu.css" />
    <title>{% block title %}Панель администратора{% endblock %}</title>

    {% block css %}
    {% endblock %}
    
    <!-- Bootstrap Core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- MetisMenu CSS -->
    <link href="/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link href="/css/sb-admin-2.css" rel="stylesheet">
    <link href="/css/manager.css" rel="stylesheet">


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Nuber v2.0</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                
               
                <!-- /.dropdown -->
                
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">

                        <li class="divider"></li>
                        <li><a href="/logout"><i class="fa fa-sign-out fa-fw"></i> Выход</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse ">
                   
                    <ul id="menu">
                        <li class='{% if app.request.attributes.get('_route') == 'work_main' %}active{%endif%}'>
                            <a href="/work/">Главная</a>
                        </li>
                        <li>
                            <a href="#">Магазин </a>
                            <ul class="{{ app.request.attributes.get('_route') | replace({'work_catalog':'visible','work_order':'visible','work_gift':'visible'})}}">
                                <li class='{% if app.request.attributes.get('_route') == 'work_catalog' %}active{%endif%}'><a href="/work/catalog/">Каталог</a></li>
                                <li class='{% if app.request.attributes.get('_route') == 'work_order' %}active{%endif%}'><a href="/work/order/">Заказы</a></li>
                                <li class='{% if app.request.attributes.get('_route') == 'work_gift' %}active{%endif%}'><a href="/work/gift/">Подарки</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">Сайт</a>
                            <ul class="{{ app.request.attributes.get('_route') | replace({'work_product_page_rec':'visible','work_settings':'visible','work_page':'visible','work_page_item':'visible'})}}">
                                <li class='{% if app.request.attributes.get('_route') == 'work_page' or app.request.attributes.get('_route') == 'work_page_item' %}active{%endif%}'><a href="/work/page/">Страницы</a></li>
                                <li class='{% if app.request.attributes.get('_route') == 'work_product_page_rec' %}active{%endif%}'><a href="/work/page/item-rec/">Рекомендованные товары</a></li>   
                                <li class='{% if app.request.attributes.get('_route') == 'work_settings' %}active{%endif%}'><a href="/work/settings/">Настройки</a></li>
                            </ul>
                        </li> 
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">


                  {% block body %}{% endblock %}
           
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    
    <!-- jQuery -->
    <script src="/js/jquery-2.1.3.min.js"></script>
    <script src="/js/menu-collapsed.js" type="text/javascript"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="/js/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="/js/sb-admin-2.js"></script>
    <script src="/js/manager.js"></script>
    {% block js %}{% endblock %}
</body>

</html>

